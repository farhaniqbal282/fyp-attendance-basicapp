<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with ActionBar support -->
    <style name="Base.Theme.Fyp2App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary branding colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- ActionBar settings -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Customizing StatusBar and NavigationBar for dark mode -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/teal_200</item>

        <!-- Button and EditText styling -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <!-- Application theme inheriting from the base theme -->
    <style name="Theme.Fyp2App" parent="Base.Theme.Fyp2App" />
</resources>
